{
    "name": "CRUD Application Builder",
    "description": "Will generate a simple CRUD application for your database.",
    "homepage":"https://github.com/dclaysmith/generator/example",
    "license": "MIT",
    "authors": [
        {
            "name": "D Clay Smith",
            "email": "dclaysmith@gmail.com"
        }
    ],
    "debug": true,
    "connections": [
    	{
    		"name": "app",
    		"host": "127.0.0.1",
    		"user": "root",
    		"password": "",
    		"database": "crm_app"
    	}
    ],
    "templateDirectory": "./templates",
    "outputDirectory": "../example/destination",
    "templates": [
    	{
    		"name": "DataObjectTemplate",
    		"description": "Build a data-access layer for the database.",
    		"connection": "app",
    		"repeat": "table",
    		"outputDirectory": "/models/do",
    		"overwrite": true
    	},    	
    	{
    		"name": "ListTemplate",
    		"description": "Generate a list of the items in a table.",
    		"repeat": "table",
    		"outputDirectory": "/controllers",
    		"overwrite": true
    	},    	
    	{
    		"name": "BusinessObjectTemplate",
    		"description": "Create stub for business object.",
    		"repeat": "table",
    		"outputDirectory": "/models/bo",
    		"overwrite": false
    	}
    ]
}